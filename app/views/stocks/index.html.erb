<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Laundry</th>
      <th>Carrier</th>

      <th>Hora inicio</th>
      <th>Hora fin</th>
      <th>Available</th>
      <th>Remaining</th>
      <th>Delivery type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.laundry %></td>
        <td><%= stock.carrier %></td>

        <td><%= stock.init_hour %></td>
        <td><%= stock.ending_hour %></td>
        <td><%= stock.available %></td>
        <td><%= stock.remaining %></td>
        <td><%= stock.delivery_type %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

