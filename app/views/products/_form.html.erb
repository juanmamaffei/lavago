<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :product_price %>
  </div>

  <div class="field">
    <%= form.label :laundry_id %>
    <%= form.text_field :laundry_id, id: :product_laundry_id %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.number_field :type, id: :product_type %>
  </div>

  <div class="field">
    <%= form.label :picture %>
    <%= form.text_field :picture, id: :product_picture %>
  </div>

  <div class="field">
    <%= form.label :score %>
    <%= form.number_field :score, id: :product_score %>
  </div>

  <div class="field">
    <%= form.label :only_for_suscriptions %>
    <%= form.check_box :only_for_suscriptions, id: :product_only_for_suscriptions %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
