<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Drop status</th>
      <th>Drop data</th>
      <th>Drop carrier</th>
      <th>Wash status</th>
      <th>Wash data</th>
      <th>Delivery carrier</th>
      <th>Suscription</th>
      <th>Calification score</th>
      <th>Calification comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user %></td>
        <td><%= order.drop_status %></td>
        <td><%= order.drop_data %></td>
        <td><%= order.drop_carrier %></td>
        <td><%= order.wash_status %></td>
        <td><%= order.wash_data %></td>
        <td><%= order.delivery_carrier %></td>
        <td><%= order.suscription %></td>
        <td><%= order.calification_score %></td>
        <td><%= order.calification_comment %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

